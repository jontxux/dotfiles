Match host * exec "gpg-connect-agent UPDATESTARTUPTTY /bye"
Host pi3
    HostName 192.168.1.10
    User pi
    SetEnv TERM=xterm-256color

# Configuración específica para Codeberg
Host codeberg.org
  HostName codeberg.org
  User git
  IdentityFile ~/.ssh/id_ed25519_codeberg
  AddKeysToAgent yes    # ← ¡Esto es lo importante!
  IdentitiesOnly yes    # Evita que SSH intente otras claves

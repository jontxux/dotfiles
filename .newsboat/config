# General settings
auto-reload yes
reload-time 60

# Keybindings
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# Browser settings
browser "xdg-open %u"

# Macro para copiar el enlace del video al portapapeles usando wl-copy
macro v set browser "mpv"; open-in-browser ; set browser piper
macro f set browser "firefox"; open-in-browser ; set browser piper
macro c set browser "echo -n %u | wl-copy"; open-in-browser ; set browser piper

color background          default default
color listnormal          white black
color listfocus           blue black
color listnormal_unread   yellow black
color listfocus_unread    blue black
color info                cyan black
color article             white black

# Highlights
highlight all           "---.*---"          yellow   default
highlight feedlist      ".*(0/0))"          black    default
highlight article       "(^Feed:.*|^Title:.*|^Author:.*)" cyan    default bold
highlight article       "(^Link:.*|^Date:.*)" default default
highlight article       "https?://[^ ]+"    green    default
highlight article       "^(Title):.*$"      blue     default
highlight article       "\\[[0-9][0-9]*\\]" magenta  default bold
highlight article       "\\[image\\ [0-9]+\\]" green  default bold
highlight article       "\\[embedded flash: [0-9][0-9]*\\]" green default bold
highlight article       ":.*\\(link\\)$"    cyan     default
highlight article       ":.*\\(image\\)$"   blue     default
highlight article       ":.*\\(embedded flash\\)$" magenta default
